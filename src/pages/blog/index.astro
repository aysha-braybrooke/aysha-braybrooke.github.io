---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
// import FormattedDate from '../../components/FormattedDate.astro';
// import Nav from "../../components/Nav.astro";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* Prevent horizontal scrolling on the body */
      html, body {
        overflow-x: hidden; /* Disables horizontal scrolling on the entire page */
        margin: 0;
        padding: 0;
        height: 100%;
      }

      main {
        width: 100vw;
        display: flex;
        justify-items: center;
        align-items: center;
        overflow-x: hidden; /* Prevent horizontal scrolling within the main element */
      }

      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }

      li {
        width: 500px;
      }

      /* Custom Scrollable Area */
      .scrollable::-webkit-scrollbar {
        display: none; /* Hide scrollbar */
      }

      .scrollable {
        scrollbar-width: none; /* Hide scrollbar */
        overflow-x: auto; /* Allow horizontal scrolling */
        overflow-y: hidden; /* Disable vertical scrolling */
      }
    </style>
  </head>
  <body>
    <Header />
	
    
  <!-- NAV !!!!!!!!!!!!!!!!!!!!! -->
  <nav
  class="font-dm-sans mt-8 items-center align-middle p-52 absolute top-1/2 left-1/4 -translate-x-1/3 -translate-y-1/2 z-50"
>
  <ul class="flex flex-col gap-4 items-center">
    <li>
      <button
        class="w-64 inline-flex items-center justify-center p-0.5 mb-2 me-2 text-lg text-gray-900 rounded-full group bg-gradient-to-br from-orange to-pink hover:text-white"
      >
        <span
          class="w-64 px-5 py-2.5 transition-all ease-in duration-75 bg-white rounded-full group-hover:bg-opacity-0"
        >
          <a href="/">Accueil</a>
        </span>
      </button>
    </li>

    <li>
      <button
        class="w-64 inline-flex items-center justify-center p-0.5 mb-2 me-2 text-lg text-gray-900 rounded-full group bg-gradient-to-br from-orange to-pink hover:text-white"
      >
        <span
          class="w-64 px-5 py-2.5 transition-all ease-in duration-75 bg-white rounded-full group-hover:bg-opacity-0"
        >
          <a href="/blog">Mes projets</a>
        </span>
      </button>
    </li>

    <li>
      <button
        class="w-64 inline-flex items-center justify-center p-0.5 mb-2 me-2 text-lg text-gray-900 rounded-full group bg-gradient-to-br from-orange to-pink hover:text-white"
      >
        <span
          class="w-64 px-5 py-2.5 transition-all ease-in duration-75 bg-white rounded-full group-hover:bg-opacity-0"
        >
          <a href="/about">A propos de moi</a>
        </span>
      </button>
    </li>
  </ul>
</nav>









    <main class="absolute h-screen -right-96 lg:-right-28">
      <section class="w-screen relative">
        <!-- Horizontal Scrollable Wrapper -->
        <div class="w-screen overflow-x-auto whitespace-nowrap relative ml-[600px]">
          <!-- Flex Container -->
          <ul class="flex flex-nowrap gap-5 scrollable-hover">
            <!-- Dynamically Rendered Posts -->
            {
              posts.map((post) => (
                <div class="relative group">
                  <a href={`/blog/${post.id}/`} class="block text-center">
                    <li class="">
                      <img
                        src={post.data.heroImage}
                        alt={post.data.title}
                        class="rounded-lg object-cover transition-transform duration-300 ease-in-out"
                      />
                    </li>

                    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-orange to-pink opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex justify-center items-center align-middle">                     
                      <h4 class="title text-4xl font-bold text-white">{post.data.title}</h4>
                    </div>
                  </a>
                </div>
              ))
            }
          </ul>
        </div>
      </section>
	  
      <!-- Fixed Gradient Overlay -->
      <div class="pointer-events-none absolute top-0 right-0 bottom-0 w-32 bg-gradient-to-l from-white to-transparent"></div>
    </main>

    <Footer />
  </body>
</html>
