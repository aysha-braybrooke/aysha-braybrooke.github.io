---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Nav from "../../components/Nav.astro";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100vw;
				display: flex;
				justify-items: center;
				align-items: center;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			.scrollable::-webkit-scrollbar {
			display: none; /* Hide scrollbar */
			}

			/* For Firefox */
			.scrollable {
			scrollbar-width: none; /* Hide scrollbar */
			}

			/* General Styles */
			.scrollable {
			-ms-overflow-style: none; /* Hide scrollbar for IE and Edge */
			overflow: auto; /* Ensure scrolling still works */
			}
		</style>
	</head>
	<body>
		<Header />

		<main class="flex h-screen">
			<Nav></Nav>
			<section class="w-screen relative">
				<!-- Horizontal Scrollable Wrapper -->
				<div class="w-full overflow-x-auto whitespace-nowrap p-4 relative">
					<!-- Flex Container -->
					<ul class="flex flex-nowrap gap-5 m-0 p-0 scrollable-hover">
						<!-- Dynamically Rendered Posts -->
						{
							posts.map((post) => (
								<li class="inline-block shrink-0">
									<a href={`/blog/${post.id}/`} class="block text-center">
										<img
											width="800"
											height="200"
											src={post.data.heroImage}
											alt={post.data.title}
											class="rounded-lg mb-2 object-cover"
										/>
										<h4 class="title text-lg font-bold">{post.data.title}</h4>
										<p class="date text-sm text-gray-500">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</a>
								</li>
							))
						}
					</ul>
				</div>

				<!-- Fixed Gradient Overlay -->
				<div class="pointer-events-none absolute top-0 right-0 bottom-0 w-32 bg-gradient-to-l from-white to-transparent"></div>
			</section>
		</main>

		<Footer />
	</body>
</html>
